{
  "name": "youtube-explainer-automation",
  "version": "1.0.0",
  "description": "Automated YouTube explainer video production system using Remotion",
  "scripts": {
    "dev": "remotion preview src/index.tsx",
    "build": "remotion render src/index.tsx ExplainerVideo out/video.mp4",
    "upgrade": "remotion upgrade",
    "server": "remotion server",
    "render": "remotion render",

# Automated YouTube Explainer Video System - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# AI GENERATION APIs
# ============================================================================

# OpenAI (for GPT-4 script generation and DALL-E 3 image generation)
OPENAI_API_KEY=sk-...

# Replicate (for Stable Diffusion XL)
REPLICATE_API_TOKEN=r8_...

# ElevenLabs (for voice synthesis)
ELEVENLABS_API_KEY=...

# ============================================================================
# CLOUD INFRASTRUCTURE
# ============================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET_ASSETS=video-automation-assets
AWS_S3_BUCKET_VIDEOS=video-automation-videos
AWS_S3_BUCKET_CACHE=video-automation-cache

# Remotion Lambda (optional, for cloud rendering)
REMOTION_AWS_ACCESS_KEY_ID=...
REMOTION_AWS_SECRET_ACCESS_KEY=...
REMOTION_LAMBDA_FUNCTION_NAME=remotion-render
REMOTION_BUNDLE_URL=https://...

# ============================================================================
# YOUTUBE API
# ============================================================================

# YouTube Data API v3
YOUTUBE_API_KEY=...
YOUTUBE_CLIENT_ID=...
YOUTUBE_CLIENT_SECRET=...

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/video_automation

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# Cost Limits (in USD)
MAX_COST_PER_VIDEO=20.00
DAILY_BUDGET_LIMIT=200.00

# Quality Settings
DEFAULT_RENDER_QUALITY=standard  # draft, standard, high, ultra
DEFAULT_IMAGE_PROVIDER=dalle3_standard  # dalle3_standard, dalle3_hd, sdxl
DEFAULT_VOICE_PROVIDER=elevenlabs_turbo  # elevenlabs_turbo, elevenlabs_standard, google_tts

# Performance
MAX_CONCURRENT_GENERATIONS=5
CACHE_ENABLED=true
CACHE_TTL_DAYS=30

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Local Rendering
USE_LOCAL_GPU=true
FFMPEG_PATH=/usr/bin/ffmpeg

# Debug
DEBUG_MODE=false
SAVE_INTERMEDIATE_OUTPUTS=true
CHECKPOINT_DIR=/tmp/video_automation_checkpoints
